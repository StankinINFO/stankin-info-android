<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">#c7c7c7</item>
    </style>

    <style name="ThemeOverlay.GoogleMaterial.Dark.ActionBar" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.GoogleMaterial.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>
    <style name="AppTheme_Dark_Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/cardview_dark_background</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:background">@color/design_default_color_primary</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="StankinTextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/colorStankinBlue</item>
        <item name="colorControlActivated">@color/colorStankinBlue</item>
        <item name="colorControlHighlight">@color/colorStankinBlue</item>
    </style>

    <style name="StankinTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorStankinBlue</item>
        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="hintTextColor">@color/colorStankinBlue</item>
        <item name="errorTextColor">@color/colorAccent</item>
        <item name="counterOverflowTextColor">@color/colorStankinBlue</item>
    </style>

    <style name="StankinButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="cornerRadius">22dp</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:background">#131841</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="StankinItemButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/notosans</item>
        <item name="cornerRadius">22dp</item>
    </style>

    <style name="StankinTabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorColor">@color/colorStankinBlue</item>
        <item name="tabTextColor">@color/colorStankinBlue</item>
    </style>

    <style name="ScheduleTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ScheduleSubtitleAppearance" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StankinSearchView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="StankinProgressBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorStankinBlue</item>
    </style>

    <style name="StankinDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/colorStankinBlue</item>                   <!--header background-->
        <item name="colorPrimary">@color/colorAccent</item>     <!--calendar background-->
    </style>

</resources>
